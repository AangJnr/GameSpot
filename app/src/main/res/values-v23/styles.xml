<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="textColorSecondary">@color/textColorSecondaryLight</item>
        <item name="textColorTertiary">@color/textColorTertiaryLight</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryLightInverted</item>
        <item name="textColorSecondaryInverse">@color/textColorSecondaryLightInverted</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="fab_label_background_color">@color/fab_label_background_color_light</item>
        <item name="lightStatusBar">true</item>
        <item name="bottomSheetBackgroundColor">@color/bottom_sheet_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>



    </style>




    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryInverted</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverted</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorPrimary">@color/textColorPrimaryLightInverted</item>
        <item name="textColorSecondary">@color/textColorSecondaryLightInverted</item>
        <item name="textColorTertiary">@color/textColorTertiaryLightInverted</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryLight</item>
        <item name="textColorSecondaryInverse">@color/textColorSecondaryLight</item>
        <item name="backgroundColor">@color/colorPrimaryInverted</item>
        <item name="bottomSheetBackgroundColor">@color/bottom_sheet_dark</item>
        <item name="fab_label_background_color">@color/fab_label_background_color_dark</item>
        <item name="lightStatusBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:windowBackground">@color/colorPrimaryInverted</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
        <item name="alertDialogTheme">@style/AppAlertDialogDark</item>


    </style>





    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/lightStatusBar</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/textColorPrimary</item>
    </style>


    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/AppPreferenceFragmentCompatStyle</item>
        <item name="android:titleTextColor">?attr/textColorPrimary</item>
        <item name="android:textColorPrimary">?attr/textColorPrimary</item>
        <item name="android:textColorSecondary">?attr/textColorSecondary</item>
        <item name="android:textColorTertiary">?attr/textColorTertiary</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- To tint the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimaryLight</item>
        <item name="android:itemPadding">@dimen/alert_def_padding</item>
    </style>


    <style name="AppAlertDialogDark" parent="Theme.AppCompat.Dialog.Alert">
        <!-- To tint the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryInverted</item>
        <item name="android:itemPadding">@dimen/alert_def_padding</item>


    </style>


    <style name="AppAlertDialogContent" parent="Theme.AppCompat.DayNight">
        <!-- To tint EditText and TimePicker -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppPreferenceFragmentCompatStyle" parent="@style/PreferenceFragment.Material">


    </style>

</resources>